<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dine In</title>
    <link rel="stylesheet" href="/css/index.css" />
  </head>
  <body>
    <%- include('../partials/nav_bar.ejs') %>
    <section class="top">
      <div class="logoImg">
        <img src="/images/utensils.jpeg" alt="Photo of utensils" />
      </div>
      <div class="infoPara">
        <h1>Welcome to dine in.</h1>
        <p> We provide recipes for the busy chefs.</p>
        <div class="row">
          <div class="column-one">
            <img src="/images/easyIcon.png" width="40px" height="40px" class="icons"/>
            <!-- Source: "https://www.flaticon.com/free-icons/easy-to-use" -->
            <h2>Easy</h2>
          </div>
          <div class="column-two-three">
            <img src="/images/affordableIcon.png" width="40px" height="40px" class="icons"/>
            <!-- Source: "https://www.flaticon.com/free-icons/savings" -->
            <h2>Affordable</h2>
          </div>
          <div class="column-two-three">
            <img src="/images/tastyIcon.png" width="40px" height="40px" class="icons"/>
            <!-- Source:"https://www.flaticon.com/free-icons/delicious" -->
            <h2>Delicious</h2>
          </div>
        </div>
    </section>
    <ul>
      <!-- locals.var to avoid using unpretty typeof ;) -->
      <% if (locals.errors) { %>
        <% errors.forEach(msg => { %>
          <li><%= msg.message %> </li>
        <% }) %>
      <% } %>
    <% if (messages.success_msg) { %>
      <li><%= messages.success_msg %></li>
    <% } %>
    <% if (messages.error) { %>
      <li><%= messages.error %> </li>
    <% } %>
  </ul>
    <section class="registration">
      <div class="container" id="container">
        <div class="form-container sign-up-container">

          <form action="/signup" method="POST">
            <h1>Create Account</h1>
            <input 
            type="username" 
            placeholder="Username" 
            required/>
            <input 
            type="email" 
            id="email"
            name="email"
            placeholder="Email" 
            required/>
            <input 
            type="password" 
            id="password"
            name="password"
            placeholder="Password" 
            required/>

            <button>Sign Up</button>
          </form>
        </div>
        <div class="form-container sign-in-container">
          <form action="/signin" method="POST">
            <h1>Sign in</h1>
            <input 
            type="email"
            id="email"
            name="email"
            placeholder="Email" 
            required/>
            <input 
            type="password" 
            id="password"
            name="password"
            placeholder="Password" 
            required/>

            <button>Sign In</button>
          </form>
        </div>
        <div class="overlay-container">
          <div class="overlay">
            <div class="overlay-panel overlay-left">
              <h3>Welcome Back!</h3>
              <p-registration>
                To keep dining with us please login with your personal info.
              </p-registration>
              <button class="ghost" id="signIn">Sign In</button>
            </div>
            <div class="overlay-panel overlay-right">
              <h3>Hello, Friend!</h3>
              <p-registration>Enter your personal details to start dining with us.</p-registration>
              <button class="ghost" id="signUp">Sign Up</button>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- I think this script code is handled by server --> 
      <script>
      // I think this part is handled by server:
      
      const signUpButton = document.getElementById("signUp");
      const signInButton = document.getElementById("signIn");
      const container = document.getElementById("container");

      signUpButton.addEventListener("click", () => {
        container.classList.add("right-panel-active");
      });

      signInButton.addEventListener("click", () => {
        container.classList.remove("right-panel-active");
      });
    </script>
  
    
  </body>
</html>
